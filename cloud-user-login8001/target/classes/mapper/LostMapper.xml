<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.cloud.dao.LostDAO">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.zhang.cloud.entities.LostProperty">
        insert into property(name,info,location,qq,wx,image,gmtCreated)
        values (#{name},#{info},#{location},#{qq},#{wx},#{image},now())
    </insert>

    <select id="findAll" resultType="com.zhang.cloud.entities.LostProperty">
        select id,name,info,gmtCreated from property order BY `id` DESC
    </select>

    <select id="findLostById" resultType="com.zhang.cloud.entities.LostProperty">
        select * from property where id=#{id} limit 1
    </select>

    <select id="findLostByInfo" resultType="com.zhang.cloud.entities.LostProperty">
        SELECT id,name,info,gmtCreated FROM property WHERE name like  concat('%',#{info},'%') or info LIKE concat('%',#{info},'%') order by `id` desc
    </select>

    <select id="getCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM property
    </select>

    <select id="getLostByPage" resultType="com.zhang.cloud.entities.LostProperty">
        select id,name,info,gmtCreated from property order BY `id` DESC limit #{num},10
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.cloud.dao.LostDAO">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.zhang.cloud.entities.LostProperty">
        insert into property(name,info,location,qq,wx,image)
        values (#{name},#{info},#{location},#{qq},#{wx},#{image})
    </insert>

    <select id="findAll" resultType="com.zhang.cloud.entities.LostProperty">
        select * from property
    </select>

    <select id="findLostById" resultType="com.zhang.cloud.entities.LostProperty">
        select * from property where id=#{id} limit 1
    </select>
</mapper>
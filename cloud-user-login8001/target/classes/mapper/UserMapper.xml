<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.cloud.dao.UserDAO">
    <insert id="insert" parameterType="UserDO" useGeneratedKeys="true" keyProperty="id">
        insert into user1(user_name,nick_name,pwd,email,url,gmt_created,gmt_modified)
        values (#{username},#{username},#{password},#{email},#{url},now(),now())
    </insert>

    <resultMap id="resultMap" type="com.zhang.cloud.entities.UserDO">
        <id column="id" property="id"/>
        <result column="user_name" property="username"/>
        <result column="pwd" property="password"/>
        <result column="nick_name" property="nickname"/>
        <result column="url" property="url"/>
        <result column="email" property="email"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <select id="findByUsername" resultMap="resultMap">
        select * from user1 where user_name=#{username} limit 1
    </select>

    <update id="active">
        update user1 set gmt_modified=now() where user_name=#{username}
    </update>

    <select id="findByEmail" resultMap="resultMap">
        select * from user1 where email=#{email} limit 1
    </select>
</mapper>